    "toolbar_spacing": {
      "description": "Push items to opposite ends of a toolbar",
      "code": [
        "with ui.row():",
        "    ui.button('Left')",
        "    ui.space()",
        "    ui.button('Right')"
      ]
    },
    "multiple_groups": {
      "description": "Distribute groups evenly",
      "code": [
        "with ui.row():",
        "    ui.button('Group 1')",
        "    ui.button('Group 1')",
        "    ui.space()",
        "    ui.button('Group 2')",
        "    ui.button('Group 2')",
        "    ui.space()",
        "    ui.button('Group 3')",
        "    ui.button('Group 3')"
      ]
    },
    "vertical_spacing": {
      "description": "Push items to top and bottom",
      "code": [
        "with ui.column().style('height: 300px'):",
        "    ui.label('Top')",
        "    ui.space()",
        "    ui.label('Bottom')"
      ]
    },
    "navigation_bar": {
      "description": "Create a navigation bar with centered title",
      "code": [
        "with ui.row():",
        "    ui.button('Menu', icon='menu')",
        "    ui.space()",
        "    ui.label('Title').classes('text-h6')",
        "    ui.space()",
        "    ui.button('Settings', icon='settings')"
      ]
    }
  },
