  "usage_examples": {
    "basic_stepper": {
      "description": "Simple stepper with navigation",
      "code": [
        "with ui.stepper() as stepper:",
        "    with ui.step('step1', 'First Step'):",
        "        ui.label('Step 1 content')",
        "    with ui.step('step2', 'Second Step'):",
        "        ui.label('Step 2 content')",
        "    with ui.stepper_navigation():",
        "        ui.button('Previous', on_click=stepper.previous)",
        "        ui.button('Next', on_click=stepper.next)"
      ]
    },
    "with_icons": {
      "description": "Stepper with custom icons",
      "code": [
        "with ui.stepper():",
        "    with ui.step('info', 'Information', icon='info'):",
        "        ui.label('Enter information')",
        "    with ui.step('confirm', 'Confirmation', icon='check'):",
        "        ui.label('Confirm details')"
      ]
    },
    "vertical_stepper": {
      "description": "Vertical step layout",
      "code": [
        "with ui.stepper().props('vertical'):",
        "    with ui.step('step1', 'Step 1'):",
        "        ui.label('Content 1')",
        "    with ui.step('step2', 'Step 2'):",
        "        ui.label('Content 2')"
      ]
    },
    "conditional_navigation": {
      "description": "Navigation with validation",
      "code": [
        "def can_proceed():",
        "    return validate_current_step()",
        "",
        "with ui.stepper() as stepper:",
        "    # ... steps ...",
        "    with ui.stepper_navigation():",
        "        ui.button('Next', on_click=lambda: stepper.next() if can_proceed() else None)"
      ]
    }
  },
